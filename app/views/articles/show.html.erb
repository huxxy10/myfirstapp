
<h2 align="center">Title: <%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
    <% if @article.user %>
    <ul class = "listing">
    <div class = "row">
        <div class = "well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
            <li class = "article-tittle">
                <%= link_to @article.user.username, user_path(@article.user)%>
            </li>
            <li>
            <small><%= pluralize(@article.user.articles.count, "articles") if @article.user.articles %> </small>
            </li>
            </div>
            </div>
            </ul>
            <% end %>
	<h4 class="center Descripion"><strong>Descripion</strong></h4>
        <hr>
         <%=simple_format(@article.description) %>
         <div class="article-actions">
        <%= link_to "Edit Articles", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
        <%= link_to "Delete Articles", article_path(@article), 
                       data:  {turbo_method: :Delete, turbo_confirm: "Are you sure?"},
                        class:"btn btn-xs btn-danger" %>
        <%= link_to "Show Articles", articles_path, class: "btn btn-xs btn-success" %>

        </div>
</div>